@using Library.Models
@model Advertisement

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

<div class="card card-body shadow">
    <h2 class="text-center text-danger">Delete Ad</h2>

    <h3>Are you sure you want to delete this ad?</h3>
    <p>Title: @Model.Title</p>
    <p>Description: @Model.Description</p>
    <p>Price: @Model.Price SEK</p>

    @using (Html.BeginForm("Delete", "Ads", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-between">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Ads")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>